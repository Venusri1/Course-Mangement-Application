<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
</div>
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
      
      
          <div class="card-body mt-3 mb-4 ">
            <h3 class="mb-5 text-center">Login to explore</h3>
            
            <form action="/login" method="post">
                <div class="form-group m-3">
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example97">Email ID</label>
                        <input type="email" name="email" id="email" placeholder="Email" class="form-control form-control-lg" required>
                        <div class="email error"> <% flash.get('emailfailed').forEach(function (message) { %>
                          <div style="color:rgb(223, 91, 91);">
                            <%= message %>
                          </div>
                      <% }) %></div>
                          
                      </div>
                      <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example3">Password</label>
                        <input type="password" id="form3Example3" class="form-control form-control-lg"
                          placeholder="Enter a valid email address" name="password" />
                          <div class="password error"> <% flash.get('password').forEach(function (message) { %>
                            <div style="color:rgb(223, 91, 91);">
                              <%= message %>
                            </div>
                        <% }) %>
                        <div>
                          <% flash.get('passwordfailed').forEach(function (message) { %>
                            <div style="color:rgb(223, 91, 91);">
                              <%= message %>
                            </div>
                        <% }) %>
                        </div>
                      </div>
                          
                      </div>
            
                <div  class="form-outline mt-3">

                    <button type="submit" class="btn btn-lg ms-4 justify-content-center btn-warning" >Login</button>
                      <p class="text-center text-muted mt-5 mb-0">Didn't have an account singup here? <a href="/signup"
                        class="fw-bold text-body"><u>Sign up</u></a></p>
                    </div>      
            </form>
            </div>
        </div>
    </div>
</div>
</div>
</section>

