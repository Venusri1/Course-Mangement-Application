<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css"
  integrity="sha384-b6lVK+yci+bfDmaY1u0zE8YYJt0TZxLEAFyYSLHId4xoVvsrQu3INevFKo+Xir8e"
  crossorigin="anonymous"
/>
<div class="container mt-5">
  <h3>Add transaction</h3>
  <form action="/addtran/<%= account.id %>" method="post" id="add-form" class="mt-5">
    <!-- Date input -->
    <div class="form-outline mt-3">
      <label for="date" class="col-1 col-form-label">Date</label>
      <input type="date" class="form-control" id="date" name="date" required/>
    </div>

    <!-- Type of transaction input -->
    <div class="container form-outline mt-3"> </div>
    <label for="select mt-5">Select transaction</label>
    <select id="select" name="select" class="form-control" required>
      <% for (let select of ['income', 'expense']) { %>
        <option value="<%= select %>" <%= (user.select === select) %> >
          <%= select %>
        </option>
      <% } %>
    </select>
    <div class="form-outline mt-3"> 
    <label for="select">Created by name</label>
    
    <select class="form-control" id="created" name="created" required>
      <option>
        <%= owner.firstname %> <%= owner.lastname %>
      </option>
    </select>
  </div>

    <!-- Message input -->
    <div class="form-outline mt-3">
      <label class="form-label" for="description">Description</label>
      <textarea
        class="form-control"
        id="description"
        rows="4"
        name="description"
        required
      ></textarea>
    </div>

    <!-- Amount input -->
    <div class="container form-outline mt-3">
      <label class="form-label" for="title">Amount</label>
      <input
      type="number" step="any" min="0" 
        class="form-control"
        id="amount"
        name="amount"
        placeholder="Enter Amount"
        required
      />
    </div>
  
    <div class="container form-outline mt-3" id="balance" name="balance"></div>
   

 
    <!-- Submit button -->
    <button type="submit" class="btn btn-warning mt-3" >submit</button>
  </form>
</div>

<script type="text/javascript">
  window.onload = function() { //from ww  w . j  a  va2s. c  o  m
    var today = new Date().toISOString().split('T')[0];
    document.getElementsByName("date")[0].setAttribute('max', today);
  }
</script>