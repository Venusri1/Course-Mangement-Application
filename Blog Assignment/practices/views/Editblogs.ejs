<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>

<%- include('layouts/Main') %>
<%- include('layouts/Adminheader') %>

<div class="container mt-5">
  <div class="col col-2">

  </div>
  <h1>Title of the blog: <%= updateblog.title %></h1>

    <form action="/updates/<%= updateblog._id%>" method="post" id="add-form" enctype="multipart/form-data">
      
                            <!-- Name input -->
      <div class="container form-outline mb-4">
        <label class="form-label" for="title" >Title</label>
      <input type="text" name="title" id="title" class="form-control" placeholder="Add Categoria" value="<%= updateblog.title %>" required />
      <div class="form-group">
        <label for="name">Category Name</label>
      <select class="form-control" id="name" name="name" required>
        <% allcategories.forEach((row)=>{ %>
          <option value="<%= row._id %>">
            <%= row.name %>
          </option>
        <% }) %>
      
      </select>
    </div>
    
        <!-- Message input -->
        <div class="form-outline mt-4">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" id="description" rows="4" name="description" required><%= updateblog.description%></textarea>
        </div>

        <div class="mt-3">
            <label for="image" class="form-label">Upload images</label>
            <input class="form-control" type="file" id="file" name="images" >
            <img src="/<%= updateblog.images %>" class="img-thumbnail">
          </div>
          <input type="hidden" value="<%= updateblog.images %>" name="oldimage">
      
     
        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mt-4">Update Blog</button>
        <a href="/allblog" class="btn btn-danger mt-4">delete</a>
        <!-- <button type="delete" class="btn btn-secondary btn-block mt-4" href="/allblog">delete</button> -->

      </form>
     

</div>


