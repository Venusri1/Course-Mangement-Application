    <form action="/addblog" method="post" id="add-form" enctype="multipart/form-data">
      
                            <!-- Name input -->
      <div class="container form-outline mb-4">
        <label class="form-label" for="title" >Title</label>
      <input type="text" name="title" id="title" class="form-control" placeholder="Title of the blog" required />
    

        <div class="form-group">
            <label for="name">Category Name</label>
           
            <select class="form-control" id="name" name="name" required>
              <% allcategorie.forEach((row)=>{ %>
                <option value="<%= row._id %>">
                  <%= row.name %>
                </option>
              <% }) %>
            
            </select>
         
          </div>
      
        <!-- Email input
        <div class="form-outline mb-4">
