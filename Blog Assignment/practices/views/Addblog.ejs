        <!-- Message input -->
        <div class="form-outline mt-4">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" id="description" rows="4" name="description" required></textarea>
        </div>

        <div class="mt-3">
            <label for="image" class="form-label">Upload images</label>
            <input class="form-control" type="file" id="file" name="images">
          </div>
      
     
        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mt-4">Send</button>
        <a href="/allblog" class="btn btn-danger mt-4">Cancel</a>
